{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "typed-router.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "database/types.ts",
    "auto-imports.d.ts",
    "components.d.ts",
    "formkit.config.ts",
    "formkit.theme.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "database/*": ["./database/*"]
    }
  }
}
